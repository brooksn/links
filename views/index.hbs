<html>
  <head>
    <title>Add URL</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  </head>
  <body>
    {{#if message}}
    <h2>{{message}}</h2>
    {{/if}}
    <form method="post">
      <div class="input-group input-group-sm">
        <span class="input-group-addon" id="url-label">url</span>
        <input name="url" type="text" class="form-control" placeholder="http://example.com" aria-describedby="sizing-addon3">
      </div>
      <div class="input-group input-group-sm">
        <span class="input-group-addon" id="slug-label">/</span>
        <input name="slug" type="text" class="form-control" placeholder="slug" aria-describedby="sizing-addon3">
      </div>
      <div class="input-group input-group-sm">
        <span class="input-group-addon" id="combo-label">combo</span>
        <input name="combo" type="text" class="form-control" placeholder="optional: password-protect link" aria-describedby="sizing-addon3">
      </div>
      <p />
      <div class="input-group input-group-sm">
        <span class="input-group-addon" id="password-label">password</span>
        <input name="password" type="password" class="form-control" aria-describedby="sizing-addon3">
      </div>
      <p />
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </body>
  <script>
    $( document ).ready(function(){
      var queries = {};
      $.each(document.location.search.substr(1).split('&'), function(c,q){
      var i = q.split('=');
      queries[i[0].toString()] = i[1].toString();
      });
      alert(JSON.stringify(queries, null, '  '));
    });
  </script>
</html>
